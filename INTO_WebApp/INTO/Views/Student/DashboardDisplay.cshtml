@model INTO.Models.LoginModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles{
    <link rel="stylesheet" href="@String.Format("{0}://{1}", Context.Request.Scheme, Context.Request.Host)/css/site.css" />
    <link rel="stylesheet" href="@String.Format("{0}://{1}", Context.Request.Scheme, Context.Request.Host)/css/cropper/cropper.css" />
    <link rel="stylesheet" href="@String.Format("{0}://{1}", Context.Request.Scheme, Context.Request.Host)/css/cropper/croppie.css" />
}
@section Scripts{
    <script type="application/javascript" src="@String.Format("{0}://{1}", Context.Request.Scheme, Context.Request.Host)/js/cropper/croppie.js"></script>
    <script type="application/javascript" src="@String.Format("{0}://{1}", Context.Request.Scheme, Context.Request.Host)/js/cropper/cropper.js"></script>
    <script type="application/javascript" src="@String.Format("{0}://{1}", Context.Request.Scheme, Context.Request.Host)/js/cropper/cam.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            var ddlCountries = new Select('#ddlCountries', {
                // auto show the live filter
                filtered: 'auto',
                // auto show the live filter when the options >= 8
                filter_threshold: 8,
                // custom placeholder
                filter_placeholder: 'Select your country'
            });
            var date = new Date();
            var month = date.getUTCMonth() + 1; //months from 1-12
            var day = date.getUTCDate();
            var year = date.getUTCFullYear();

            formatteDate = year + "/" + month + "/" + day;
            //$(".date-client").html(formatteDate);
        });
    </script>
}
<div class="container">
    <form method="POST" asp-action="EditProfile" asp-controller="Student" data-role="student-profile">
        <div class="row">
            <div class="col-md-7">
                @await Html.PartialAsync("../Tutor/PictureCropper", Model)
            </div>
            <div class="col-md-5">
                <div id="avatarSpace" class="avatar mx-auto white">
                    <a id="btnProfilePicture" alt="Profile Picture" class="waves-effect waves-light" data-toggle="modal" data-target="#modalCropper">
                        <img class="contains-user-picture rounded-circle"
                             alt="Avatar">
                    </a>
                    <a role="button" class="btn btn-floating btn-outline waves-effect waves-dark square-40 square-40 ambit-save" data-role="save-std-ambition">
                        <i class="icon-save"></i>
                    </a>
                </div>
                <div class="spc-sm">
                    <p>Your main ambition(s) help tutors take good care about their attitudes and choices of most valuable explanations when delivering the idea.</p>
                    <p>It's not inappropriate nor of shame to change an ambition for some reason or simply aplly some new touches from time to time, so feel free to edit.</p>
                    <span style="visibility:hidden" class="text-error" id="lblAmbition"></span>
                    <textarea rows="6" cols="64" id="txtAmbition" placeholder="Be yourself so proudly!" class="form-control mt-4" data-role="input-std-ambition"></textarea>
                </div>
            </div>
            <button type="button" class="btn-outline-info btn-rounded light-blue lighten-5 blue-text btn-sm waves-effect waves-light preview-back">
                <svg xmlns="http://www.w3.org/2000/svg" fill="#03a9f4" height="24" viewBox="0 0 24 24" width="24">
                    <path d="M0 0h24v24H0z" fill="none" />
                    <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z" />
                </svg>
            </button>

            <div class="col-md-6 mt-5">
                <div class="card" style="height:437px;">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h4>General Details</h4>
                            </div>
                            <div class="col-md-4">
                                <div class="md-form">
                                    <button type="button" id="studentDisplayButton" class="btn btn-info btn-sm white-text light-blue darken-1 btn-profile" data-role="student-display-save">Save</button>
                                </div>
                            </div>
                            <div class="col-md-2" style="display:none;">
                                <div class="md-form">
                                    <input type="text" id="txtUserId" asp-for="@Model.User.UserId" value="@Model.User.UserId" class="form-control-sm" data-role="student-profile-Id">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <!-- First name -->
                                <div class="md-form">
                                    <input type="text" id="txtFirstName" asp-for="@Model.User.FirstName" value="@Model.User.FirstName" class="form-control-sm" data-role="student-profile-fname" required>
                                    <label data-error="wrong" for="txtFirstName" class="">First name</label>
                                    <div class="invalid-feedback">Your first name please</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <!-- Last name -->
                                <div class="md-form">
                                    <input type="text" asp-for="@Model.User.LastName" id="txtLastName" value="@Model.User.LastName" class="form-control-sm" data-role="student-profile-lastName" required>
                                    <label data-error="wrong" for="txtLastName" class="">Last name</label>
                                    <div class="invalid-feedback">Your last name please</div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="md-form">
                                    <input type="email" asp-for="@Model.User.Email" id="txtEmail" class="form-control-sm" data-role="student-profile-email" required style="width:88%;">
                                    <label data-error="wrong" data-success="right" for="txtEmail">Email</label>
                                    <div class="invalid-feedback">Your email please</div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="md-form">
                                    <input type="date" asp-for="Date" id="txtDateOfBirth" class="form-control-sm" data-role="student-profile-date" required style="width:88%;">
                                    <label data-error="wrong" data-success="right" for="txtDateOfBirth">Date Of Birth</label>
                                    <div class="invalid-feedback">Your Date Of Birth please</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mt-5">
                <div class="card">
                    <div class="card-body">
                        <h4>Previous Education</h4>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="md-form">
                                    <input type="text" id="txtSchoolName" class="form-control-sm" data-role="student-profile-school-name" required>
                                    <label data-error="wrong" data-success="right" for="txtSchoolName">School Name</label>
                                    <div class="invalid-feedback">Your School Name please</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="md-form">
                                    <input type="text" id="txtSchoolYear" class="form-control-sm" data-role="student-profile-school-year" required>
                                    <label data-error="wrong" data-success="right" for="txtSchoolYear">School Year</label>
                                    <div class="invalid-feedback">Your School Year please</div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="md-form">
                                    <select id="ddlCountries" asp-for="User.LocationSettings.Country.Id" value="User.LocationSettings.Country.Id" data-role="student-profile-country" tabindex="0" required style="width:51%;">
                                        <option value="0">Select your country</option>
                                        @foreach (var country in LoginModel.AllCountries)
                                        {
                                            <option value="@country.Id">@country.Name</option>
                                        }
                                    </select>
                                    <div class="invalid-feedback">Your country please</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="md-form">
                                    <input type="text" id="txtCity" class="form-control-sm" data-role="student-profile-city">
                                    <label data-error="wrong" data-success="right" for="txtCity">City</label>
                                    <div class="invalid-feedback">Your City please</div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="md-form">
                                    <input type="text" id="txtAddress" class="form-control-sm" data-role="student-profile-address">
                                    <label data-error="wrong" data-success="right" for="txtAddress">Address 1</label>
                                    <div class="invalid-feedback">Your Address 1 please</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="md-form">
                                    <input type="text" id="txtAddress2" class="form-control-sm" data-role="student-profile-address2">
                                    <label data-error="wrong" data-success="right" for="txtAddress2">Address 2</label>
                                    <div class="invalid-feedback">Your Address 2 please</div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="md-form">
                                    <input type="text" id="txtPostCode" class="form-control-sm" data-role="student-profile-post-code" style="width:88%;">
                                    <label data-error="wrong" data-success="right" for="txtPostCode">Postcode</label>
                                    <div class="invalid-feedback">Your Postcode please</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
