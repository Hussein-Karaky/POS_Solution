    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row"> </div>
    <div class="row">
        <div class="col-md-6">
            <img src="~/images/tutor1.png" alt="branding" class="label-icon-active shadow-1-5" style="display: block; margin-left: auto; margin-right: auto; width: 80%; border-radius: 10px; box-shadow: rgb(223, 227, 232) 0px 25px 30px; " />
