@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#basicExampleModal">
    Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="basicExampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Sign Up Via Facebook</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="POST" asp-action="EditProfile" asp-controller="Student" data-role="student-profile">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="md-form">
                                <input type="text" id="txtFirstName" class="form-control-sm" data-role="student-profile-fname" required>
                                <label data-error="wrong" for="txtFirstName" class="">Email</label>
                                <div class="invalid-feedback">Your Email please</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="md-form">
                                <input type="text" id="txtFirstName" class="form-control-sm" data-role="student-profile-fname" required>
                                <label data-error="wrong" for="txtFirstName" class="">Password</label>
                                <div class="invalid-feedback">Your Password please</div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Login</button>
            </div>
        </div>
    </div>
</div>