                            <div class="form-card container">
                                <div class="row">
                                    <div class="col-7">
                                        <h2 class="fs-title">Account Information:</h2>
                                    </div>
                                </div>
                                <div class="md-form">
                                    <input type="text" id="txtFirstName" asp-for="FirstName" class="form-control-sm" data-role="signUp-firstName" required>
                                    <label data-error="wrong" for="txtFirstName" class="">First name</label>
                                    <div class="invalid-feedback">Your first name please</div>
                                </div>
                                <div class="md-form">
                                    <input type="text" asp-for="LastName" id="txtLastName" class="form-control-sm" data-role="signUp-lastName" required>
                                    <label data-error="wrong" for="txtLastName" class="">Last name</label>
                                    <div class="invalid-feedback">Your last name please</div>
                                </div>
                                <div class="md-form">
                                    <input type="email" asp-for="Email" id="txtEmail" class="form-control-sm match-parent" data-role="signUp-email" required>
                                    <label data-error="wrong" data-success="right" for="txtEmail">Email</label>
                                    <div class="invalid-feedback">Your email please</div>
                                </div>
                                <div class="md-form">
                                    <input type="password" asp-for="Password" class="form-control-sm match-parent" id="txtPassword" data-role="signUp-pwd" required>
                                    <label data-error="wrong" data-success="right" for="txtPassword">Password</label>
                                    <div class="invalid-feedback">Enter a valid password please</div>
                                </div>
                                <div class="md-form">
                                    <input type="date" asp-for="Date" id="txtDateOfBirth" class="form-control-sm" data-role="student-profile-date" required>
                                    <label data-error="wrong" data-success="right" for="txtDateOfBirth">Date Of Birth</label>
                                    <div class="invalid-feedback">Your Date Of Birth please</div>
                                </div>
                            </div>
                            <button name="next" class="btn btn-info next action-button white-text light-blue darken-1">Next</button>
                        </fieldset>
                        <fieldset>
                            <div class="form-card container">
                                <div class="row">
                                    <div class="col-7">
                                        <h2 class="fs-title">Personal Information:</h2>
                                    </div>
                                </div>
                                <div class="md-form">
                                    <input type="text" asp-for="FirstName" id="txtSchoolName" class="form-control-sm" data-role="student-profile-date" required>
                                    <label data-error="wrong" data-success="right" for="txtSchoolName">School Name</label>
                                    <div class="invalid-feedback">Your School Name please</div>
                                </div>
                                <div class="md-form">
                                    <select id="ddlCountries" asp-for="CountryId" data-role="student-profile-country" tabindex="0" required style="width:51%;">
                                        <option value="0">Select your school Location</option>
                                        @foreach (var country in LoginModel.AllCountries)
                                        {
                                            <option value="@country.Id">@country.Name</option>
                                        }
                                    </select>
                                    <div class="invalid-feedback">Your country please</div>
                                </div>
                                <div class="md-form">
                                    <input type="date" asp-for="Date" id="txtSchoolYear" class="form-control-sm" data-role="student-profile-date" required>
                                    <label data-error="wrong" data-success="right" for="txtSchoolYear">School Year</label>
                                    <div class="invalid-feedback">Your School Year please</div>
                                </div>
                            </div>
                            <button name="previous" class="btn btn-info previous action-button-previous white-text light-blue darken-1">Previous</button>
                            <button type="submit" id="signUpButton" class="btn btn-info white-text light-blue darken-1" data-role="signUp-submit">Sign up</button>
                        </fieldset>
                    </form>
