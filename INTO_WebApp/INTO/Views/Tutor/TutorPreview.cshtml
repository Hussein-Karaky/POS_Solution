<style>
    .card75 {
        box-shadow: 0 0 black;
        background-color: white;
        height: 186px;
    }

    .contactBtn {
        width: 44%;
        height: 21%;
        font-family: Arial, Helvetica, sans-serif;
        padding-bottom: 0;
        padding-left: 0;
        padding-top: 9px !important;
        padding-right: 0;
        border-radius: 2px;
        font-size: 10px;
        box-shadow: 0 0 black !important;
    }

    .showMore {
        margin-bottom: 1em;
        font-size: 11px;
        color: #00BFFF;
        margin-top: -.8em;
    }

    .GetInTouchBtn {
        color: #1E90FF;
        width: 190px;
        margin-top: 2em;
        margin-left: 2em;
        border: 1px solid #1E90FF;
    }

    .rating-static {
        width: 60px;
        height: 16px;
        display: block;
        background: url('http://www.itsalif.info/blogfiles/rating/star-rating.png') 0 0 no-repeat;
    }

    .rating-30 {
        background-position: -24px 0;
    }

    .rating {
        display: flex;
        flex-direction: row-reverse;
        justify-content: center;
    }

        .rating > input {
            display: none
        }

        .rating > label {
            position: relative;
            font-size: 15px;
            color: #FFD600;
            cursor: pointer
        }

            .rating > label::before {
                content: "\2605";
                position: absolute;
                opacity: 0
            }

            .rating > label:hover:before,
            .rating > label:hover ~ label:before {
                opacity: 1 !important
            }

        .rating > input:checked ~ label:before {
            opacity: 1
        }

        .rating:hover > input:checked ~ label:before {
            opacity: 0.4
        }
</style>