@using BLL.Tutor
@using BLL.Shared
@model LoginModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    IList<Country> countries = new List<Country>();
    countries = INTO.Models.LoginModel.AllCountries.ToList();
}
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <form id="contactATutorForm" name="contactATutorForm" method="post" action="/students/secure/contact-a-tutor.html?id=82684" class="row" enctype="application/x-www-form-urlencoded">
                <section class="column-8 column-12-m u-padding-right--l--until-medium">
                    <header>
                        <h2>How can Abbie help?</h2>
                        <p style="font-size:18px;color:silver;">
                            Tell Abbie what you’re looking for.
                            We’ll notify you via email when they respond (usually within 24hrs).
                        </p>
                    </header>
                    <div class="row">
                        <h6 class="header-margin-top headerStyle">Select subject</h6>
                    </div>
                    <div class="row">
                        <div class="form-group selectDiv">
                            <select id="txtCountry" name="txtCountry" class="country-select" data-role="select-country" style="width:749px;padding-top: 1em; padding-bottom: 1em; border-color: silver; padding-left: 1em;" required>
                                <option value="">Select your country</option>
                                @foreach (var country in countries)
                                {
                                    <option value="@country.Name">@country.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <h6 class="header-margin-top headerStyle">How often would you like lessons?(optional)</h6>
                    </div>
                    <div class="row">
                        <div class="col-md-3 margin-bottom">
                            <div class="lesson-time-radio rdDiv">
                                <label for="rbOnce" class="lesson-time-radio-label" style="font-weight:bold;">
                                    <input type="radio" value="Once a week" id="rbOnce" name="lessonTimeRadio" data-role="lesson-time" class="lesson-time" style="display:none;">
                                    <span class="label-text"><b>Once a week</b></span>
                                </label>
                            </div>
                        </div>
                        <div class="col-md-3 margin-bottom">
                            <div class="lesson-time-radio rdDiv">
                                <label for="rbTwice" class="lesson-time-radio-label" style="font-weight:bold;">
                                    <input type="radio" value="Twice a week" id="rbTwice" name="lessonTimeRadio" data-role="lesson-time" class="lesson-time" style="display:none;">
                                    <span class="label-text"><b>Twice a week</b></span>
                                </label>
                            </div>
                        </div>
                        <div class="col-md-3 margin-bottom">
                            <div class="lesson-time-radio rdDiv">
                                <label for="rbFortnightly" class="lesson-time-radio-label" style="font-weight:bold;">
                                    <input type="radio" value="Fortnightly" id="rbFortnightly" name="lessonTimeRadio" data-role="lesson-time" class="lesson-time" style="display:none;">
                                    <span class="label-text"><b>Fortnightly</b></span>
                                </label>
                            </div>
                        </div>
                        <div class="col-md-3 margin-bottom">
                            <div class="lesson-time-radio rdDiv">
                                <label for="rbLater" class="lesson-time-radio-label" style="font-weight:bold;">
                                    <input type="radio" value="Decide Later" id="rbLater" name="lessonTimeRadio" data-role="lesson-time" class="lesson-time" style="display:none;">
                                    <span class="label-text"><b>I'll Decide Later</b></span>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <h6 class="header-margin-top headerStyle">Exam Board(optional)</h6>
                    </div>
                    <div class="row">
                        <div class="col-md-3 margin-bottom">
                            <div class="board-radio rdDiv">
                                <label for="rbAQA" class="board-radio-label" style="font-weight:bold;">
                                    <input type="radio" value="AQA" id="rbAQA" name="examBoardRadio" data-role="choice-exam-board" class="choice-exam-board" style="display:none;">
                                    <span class="label-text"><b>AQA</b></span>
                                </label>
                            </div>
                        </div>
                        <div class="col-md-3 margin-bottom">
                            <div class="board-radio rdDiv">
                                <label for="rbOCR" class="board-radio-label" style="font-weight:bold;">
                                    <input type="radio" value="OCR" id="rbOCR" name="examBoardRadio" data-role="choice-exam-board" class="choice-exam-board" style="display:none;">
                                    <span class="label-text"><b>OCR</b></span>
                                </label>
                            </div>
                        </div>
                        <div class="col-md-3 margin-bottom">
                            <div class="board-radio rdDiv">
                                <label for="rbSQA" class="board-radio-label" style="font-weight:bold;">
                                    <input type="radio" value="SQA" id="rbSQA" name="examBoardRadio" data-role="choice-exam-board" class="choice-exam-board" style="display:none;">
                                    <span class="label-text"><b>SQA</b></span>
                                </label>
                            </div>
                        </div>
                        <div class="col-md-3 margin-bottom">
                            <div class="board-radio rdDiv">
                                <label for="rbOther" class="board-radio-label" style="font-weight:bold;">
                                    <input type="radio" value="Other" id="rbOther" name="examBoardRadio" data-role="choice-exam-board" class="choice-exam-board" style="display:none;">
                                    <span class="label-text"><b>Other</b></span>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <h6 class="header-margin-top headerStyle">Add a message</h6>
                    </div>
                    <div class="row">
                        <textarea style="width:95%;"></textarea>
                    </div>
                    <div class="row">
                        <h6 class="header-margin-top headerStyle">Suggest a time</h6>
                    </div>
                    <div class="row">
                        <div class="col-md-3 margin-bottom">
                            <label for="birthday">Pickup Day:</label>
                            <input type="date" id="birthday" name="birthday">
                        </div>
                        <div class="col-md-3 margin-bottom">
                            <label for="appt">Pickup Time</label>
                            <input type="time" id="appt" name="appt">
                        </div>
                        <div class="col-md-3 margin-bottom margin-top">
                            <div class="date-radio rdDiv">
                                <label for="rbdate" class="date-radio-label" style="font-weight:bold;">
                                    <input type="radio" value="Decide later" id="rbdate" name="DateRadio" class="choice-date" style="display:none;">
                                    <span class="label-text"><b>Decide later</b></span>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3 margin-bottom">
                            <button class="btn btn-link" style="color:#1E90FF;">Send</button>
                        </div>
                    </div>
                    <div class="row" style="background-color:#FFEBCD;padding-bottom:1em;width:750px;">
                        <div class="col-md-4" style="padding-top:4em;padding-left:4em;">
                            <blockquote class="warning">
                                <img src="https://cdn.mytutor.co.uk/icons/laptop-chat-faces-warning5.svg?1607553462000" alt="Laptop chat faces">
                            </blockquote>
                        </div>
                        <div class="col-md-8" style="padding-top:2em;">
                            <blockquote class="warning">
                                <div>
                                    <h3>Meet Abbie online for free</h3>
                                    <p>Suggest a time to meet Abbie for a free 15 minute chat in our online lesson space (it’s a bit like Skype!).</p>
                                    <p>It’s totally free and there’s no obligation to book lessons after!</p>
                                </div>
                            </blockquote>
                        </div>
                    </div>                   
                </section>
            </form>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <img src="~/images/AnnaDoe.jpg" style="display:block;margin: 1.5em auto;width:80px;height:80px;border-radius:100%;" />
