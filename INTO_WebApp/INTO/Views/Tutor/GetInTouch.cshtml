                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('select').change(function () {
            var mylist = $('#txtCountry').val();
            $("#subjectChoice").css("display", "none");
            $('#list').append('<li id="subjectChoice" style="margin-bottom:1em;"> <img src="https://cdn.mytutor.co.uk/icons/student-neutral5.svg?1607612826000" alt="Student icon" height="28" width="28" style="margin-right:1em;"><span style="font-size:18px;">' + mylist + '</span></li>');
        });
        $('[data-role="lesson-time"]').change(function () {
            $("#lessonTime").css("display", "none"); 
            var optionLesson = document.querySelector('input[name="lessonTimeRadio"]:checked').value;
            $('#list').append('<li id="lessonTime" style="margin-bottom:1em;"><img src="https://cdn.mytutor.co.uk/icons/calendar-repeat-neutral5.svg?1607612826000" alt="Repeat calendar icon" height="28" width="28" style="margin-right:1em;"><span style="font-size:18px;">' + optionLesson + '</span></li>');
        });
        $('[data-role="choice-exam-board"]').change(function () {
            $("#examBoard").css("display", "none");
            var optionBoard = document.querySelector('input[name="examBoardRadio"]:checked').value;
            $('#list').append('<li id="examBoard" style="margin-bottom:1em;"><img src="https://cdn.mytutor.co.uk/icons/school-neutral5.svg?1607612826000" alt="Repeat calendar icon" height="28" width="28" style="margin-right:1em;"><span style="font-size:18px;">' + optionBoard + '</span></li>');
        });
    });
</script>
