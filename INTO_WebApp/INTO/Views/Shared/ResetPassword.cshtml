@using INTO.Controllers.Shared;
@model INTO.Models.SignUpModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            var date = new Date();
            var month = date.getUTCMonth() + 1; //months from 1-12
            var day = date.getUTCDate();
            var year = date.getUTCFullYear();

            formatteDate = year + "/" + month + "/" + day;
            //$(".date-client").html(formatteDate);
        });
    </script>
}

<div class="row" style="margin-top:1em;">
    <div class="col-md-3">
    </div>
    <div class="col-md-6">
        <div class="card card-cascade wider">
            <!-- Card image -->
            <div class="view view-cascade gradient-card-header blue-gradient">
                <!-- Title -->
                <h2 class="card-header-title mb-3">Reset Your Password</h2>
                <!-- Text -->
            </div>

            <!-- Card content -->
            <div class="card-body card-body-cascade text-center">

                <form asp-action="DoResetPassword" asp-controller="Account" data-role="pwd-reset-input">
                    <div class="md-form mb-2">
                        <input type="password" asp-for="Password" class="form-control" id="txtPassword" data-role="signUp-pwd" required>
                        <label data-error="wrong" data-success="right" for="txtPassword">Password</label>
                        <div class="invalid-feedback">Enter a valid password please</div>
                    </div>
                    <div class="md-form mb-2">
                        <input type="password" asp-for="Password" class="form-control" id="txtPasswordConf" data-role="signUp-pwd" required>
                        <label data-error="wrong" data-success="right" for="txtPasswordConf">Confirm</label>
                        <div class="invalid-feedback">Enter a valid password please</div>
                    </div>
                    <input type="hidden" asp-for="User.ActivationCode" value="@Model.User.ActivationCode" />
                    <div class="text-center form-sm mt-2">
                        <button type="submit" id="btnPwdReset" class="btn btn-info white-text light-blue darken-1" data-role="pwd-reset-submit">Submit</button>
                    </div>
                </form>
            </div>
            <!-- Card content -->

        </div>
    </div>
    <div class="col-md-3">
    </div>
</div>
