@model LoginModel

<div class="row">
    <div class="col-md-4">
        <form asp-action="LoginView" asp-controller="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <!-- Modal -->
                <div class="modal fade" id="mdlLogin" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
                     aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <!--Content-->
                        <div class="modal-content form-elegant" style="top: 70px;">
                            <!--Header-->
                            <div class="modal-header text-center" style="height: 62px;padding-top: 0;">
                                <h3 class="btn-rounded modal-title upper-case white-text blue-gradient font-weight-bold my-3 shadow-2-3" id="myModalLabel" style="text-transform: uppercase; width: 150px;height: 150px;padding-top: 12%;margin-top: -76px !important; margin-left: 32%;">
                                    <strong>Log in</strong>
                                </h3>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">×</span>
                                </button>
                            </div>
                            <!--Body-->
                            <div class="modal-body mx-4" data-role="login-input">
                                <!--Body-->
                                <div class="md-form">
                                    <input type="email" name="Email" id="txtModalLoginEmail" class="form-control validate valid" data-role="login-email">
                                    <label data-error="wrong" data-success="right" for="txtModalLoginEmail" class="active">Your email</label>
                                </div>

                                <div class="md-form">
                                    <input type="password" name="Password" id="txtModalLoginPwd" class="form-control validate valid" data-role="login-pwd">
                                    <label data-error="wrong" data-success="right" for="txtModalLoginPwd" class="active">Your password</label>
                                </div>

                                <div class="text-center">

                                    <input id="timezoneOffset" asp-for="User.TimezoneOffset" type="hidden" />
                                    <button type="button" class="btn btn-block blue-gradient my-4 waves-effect z-depth-0 waves-light white-text" data-role="login-submit">Sign in</button>
                                </div>
                                <div class="row my-3 d-flex justify-content-center">
                                    <!--Facebook-->
                                    <a class="btn btn-white btn-rounded mr-md-3 z-depth-1a waves-effect waves-light" role="button">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="#3b5998"><path d="M12 0c-6.627 0-12 5.373-12 12s5.373 12 12 12 12-5.373 12-12-5.373-12-12-12zm3 8h-1.35c-.538 0-.65.221-.65.778v1.222h2l-.209 2h-1.791v7h-3v-7h-2v-2h2v-2.308c0-1.769.931-2.692 3.029-2.692h1.971v3z"></path></svg>
                                    </a>
                                    <!--Twitter-->
                                    <button type="button" class="btn btn-white btn-rounded mr-md-3 z-depth-1a waves-effect waves-light">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="#55acee"><path d="M12 0c-6.627 0-12 5.373-12 12s5.373 12 12 12 12-5.373 12-12-5.373-12-12-12zm6.066 9.645c.183 4.04-2.83 8.544-8.164 8.544-1.622 0-3.131-.476-4.402-1.291 1.524.18 3.045-.244 4.252-1.189-1.256-.023-2.317-.854-2.684-1.995.451.086.895.061 1.298-.049-1.381-.278-2.335-1.522-2.304-2.853.388.215.83.344 1.301.359-1.279-.855-1.641-2.544-.889-3.835 1.416 1.738 3.533 2.881 5.92 3.001-.419-1.796.944-3.527 2.799-3.527.825 0 1.572.349 2.096.907.654-.128 1.27-.368 1.824-.697-.215.671-.67 1.233-1.263 1.589.581-.07 1.135-.224 1.649-.453-.384.578-.87 1.084-1.433 1.489z"></path></svg>
                                    </button>
                                    <!--Google +-->
                                    <button type="button" class="btn btn-white btn-rounded z-depth-1a waves-effect waves-light">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="#dd4b39"><path d="M12 0c-6.627 0-12 5.373-12 12s5.373 12 12 12 12-5.373 12-12-5.373-12-12-12zm-2.917 16.083c-2.258 0-4.083-1.825-4.083-4.083s1.825-4.083 4.083-4.083c1.103 0 2.024.402 2.735 1.067l-1.107 1.068c-.304-.292-.834-.63-1.628-.63-1.394 0-2.531 1.155-2.531 2.579 0 1.424 1.138 2.579 2.531 2.579 1.616 0 2.224-1.162 2.316-1.762h-2.316v-1.4h3.855c.036.204.064.408.064.677.001 2.332-1.563 3.988-3.919 3.988zm9.917-3.5h-1.75v1.75h-1.167v-1.75h-1.75v-1.166h1.75v-1.75h1.167v1.75h1.75v1.166z"></path></svg>
                                    </button>
                                    <input type="hidden" data-role="redirect-action" />
                                    <input type="hidden" data-role="redirect-controller" />
                                </div>
                            </div>
                            <!--Footer-->
                            <div class="modal-footer mx-5 pt-3 mb-1">
                                <p class="font-small grey-text d-flex justify-content-end">
                                    <a class="blue-text mr-5" href="/account/forgotpassword">Forgot Password?</a>
                                    <span class="ml-5">Not a member? </span>
                                    <a href="SignUp" class="blue-text ml-1">
                                        Sign Up
                                    </a>
                                </p>
                            </div>
                        </div>
                        <!--/.Content-->
                    </div>
                </div>
                <!-- Modal -->
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            setupModal("modalLRForm");
        });
    </script>


}
