@model LoginModel
@{
    ViewData["Title"] = "Room Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{
    <link rel="stylesheet" href="@String.Format("{0}://{1}", Context.Request.Scheme, Context.Request.Host)/css/time/countdown.css" />
    <link rel="stylesheet" href="@String.Format("{0}://{1}", Context.Request.Scheme, Context.Request.Host)/css/cards.css" />
}

@section TopScripts{
    <script type="application/javascript">
            var roomId=@ViewBag.RoomId ;
    </script>
}

@section Scripts{
    <script type="application/javascript" src="@String.Format("{0}://{1}", Context.Request.Scheme, Context.Request.Host)/js/meeting/meetingInfo.js"></script>
    <script type="application/javascript" src="@String.Format("{0}://{1}", Context.Request.Scheme, Context.Request.Host)/js/time/CountDown.js"></script>
}
<h1 class="card-title font-weight-bold"><button id="room_title" type="button" class="btn btn-outline-success btn-rounded waves-effect" style="overflow: visible;"></button></h1>
<!-- Card -->
<div class="card chart-card">

    <!-- Card content -->
    <div class="card-body pb-0">

        <h3>Room Info</h3>
        <!-- Text -->
        <h4 class="card-text mb-4"><span data-role="room-subject"></span>  •  <span data-role="room-material"></span></h4>
        <h5>Due On&nbsp;<span data-role="room-duedate"></span></h5>  •  <span id="spnStarted">(Started)</span>
        <div class="d-flex justify-content-between">
            <div id="clockdiv" class="mb-4">
                <div class="light-blue">
                    <span class="days"></span>
                    <div class="smalltext">Days</div>
                </div>
                <div class="light-blue">
                    <span class="hours"></span>
                    <div class="smalltext">Hours</div>
                </div>
                <div class="light-blue">
                    <span class="minutes"></span>
                    <div class="smalltext">Minutes</div>
                </div>
                <div class="light-blue">
                    <span class="seconds"></span>
                    <div class="smalltext">Seconds</div>
                </div>
            </div>
            <a id="btnJoin" class="btn btn-primary text-light inexist" role="button">Join Room</a>
            <p class="display-5 align-self-end">Duration:&nbsp;<span data-role="room-duration"></span>&nbsp;mins</p>
            <p class="align-self-end pb-2"><span data-role="room-users-nb"></span>&nbsp;Users</p>
        </div>
    </div>

    <!-- Classic tabs -->
    <div class="classic-tabs">

        <!-- Nav tabs -->
        <ul class="nav nav-tabs md-tabs light-blue darken-1 shadow-1-5" role="tablist">
            <li class="nav-item ml-0">
                <a class="nav-link waves-light active" data-toggle="tab" href="#participants" role="tab">Participants</a>
            </li>
            <li class="nav-item">
                <a class="nav-link waves-light" data-toggle="tab" href="#panel1002" role="tab">Follow</a>
            </li>
            <li class="nav-item">
                <a class="nav-link waves-light" data-toggle="tab" href="#panel1003" role="tab">Contact</a>
            </li>
        </ul>

        <div class="tab-content rounded-bottom">
            <!--Panel 1-->
            <div class="tab-pane fade in show active" id="participants" role="tabpanel">
                <div id="roomUsers" class="w-100 h-100">

                </div>
            </div>
            <!--/.Panel 1-->
            <!--Panel 2-->
            <div class="tab-pane fade" id="panel1002" role="tabpanel">
